{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products}}

            <li class="list-group-item bhcheck">
                <span class="badge">{{this.qty}}</span>
                <span class="cart_title"><strong>{{this.item.title}}</strong></span>
                <span class="label label-success">Rs {{this.price}}</span>
                <div class="btn-group">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a href="#"> Reduce by 1</a></li>
                        <li> <a href="#"> Remove all</a> </li>
                    </ul>

                </div>

            </li>

            {{/each}}

        </ul>


    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total:{{totalPrice}} </strong>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Check out</a>
    </div>
</div>

{{else}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm offset-3">
        <h2>No items in cart</h2>
    </div>
</div>

{{/if}}
